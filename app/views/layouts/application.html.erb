<!DOCTYPE html>
<html>
  <head>
    <title>Nekko</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header class="header">
      <%=link_to "Nekko", root_path, class:"title" %>
      <% if user_signed_in? %>
        <div class="head__right">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"head-logout" %>
          <%= link_to "New Cat", new_cat_path, class:"head-nc" %>
          <%# ログイン時は、ログインしているユーザー名を表示 %>
          <%= link_to "Hello! #{current_user.nickname}", user_path(current_user.id), class:"current-user" %>
          <%# //ログイン時は、ログインしているユーザー名を表示 %>
      <% else %>
          <%= link_to "ログイン", new_user_session_path, class:"head-login" %>
          <%= link_to "新規登録", new_user_registration_path, class:"head-nl" %>
      <% end %>
    </header>
    <%= yield %>
    <footer class="footer">
    </footer>
  </body>
</html>
